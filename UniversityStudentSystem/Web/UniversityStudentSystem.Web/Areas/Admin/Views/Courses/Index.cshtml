@using UniversityStudentSystem.Web.Areas.Admin.Helpers;
@using UniversityStudentSystem.Web.Models.Courses;
@{
    string controller = "Courses";
    ViewBag.Title = "Administration - " + controller;
}

@(Html.FullFeaturedGrid<CourseViewModel>(controller, course => course.Id, cols =>
{
    cols.Bound(course => course.Name);
    cols.Bound(course => course.Description);
    cols.Bound(course => course.Specialty);
    cols.Bound(course => course.HasActiveTests);
    cols.Bound(course => course.Semester.Name);
    cols.Command(cmd => { cmd.Destroy(); });
}))


@section KendoCss{
    @Styles.Render("~/bundles/css-kendo-silver")
}

@section KendoHead{

    @Scripts.Render("~/bundles/js-kendo")
}

@section KendoJs{
    @Scripts.Render("~/bundles/js-kendo-grid")
}