@using UniversityStudentSystem.Web.Areas.Admin.Helpers;
@using UniversityStudentSystem.Web.Models.ForumPosts;
@using UniversityStudentSystem.Web.Areas.Admin.Models;

@{
    string controller = "ForumPosts";
    ViewBag.Title = "Administration - " + controller;
}

@(Html.FullFeaturedGrid<KendoForumModel>(controller, forum => forum.Id, cols =>
{
    cols.Bound(forum => forum.Title);
    cols.Bound(forum => forum.Content).Width(450);
    cols.Bound(forum => forum.Category);
    cols.Bound(forum => forum.CreatedOn).Format("{0:dd/MM/yyyy HH:mm}");
    cols.Command(cmd => { cmd.Destroy(); });
}))

@section KendoCss{
    @Styles.Render("~/bundles/css-kendo-silver")
}

@section KendoHead{

    @Scripts.Render("~/bundles/js-kendo")
}

@section KendoJs{
    @Scripts.Render("~/bundles/js-kendo-grid")
}