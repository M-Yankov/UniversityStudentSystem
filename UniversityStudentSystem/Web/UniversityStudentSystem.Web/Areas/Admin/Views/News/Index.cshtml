@using UniversityStudentSystem.Web.Areas.Admin.Helpers;
@using UniversityStudentSystem.Web.Models.NewsModels;
@using UniversityStudentSystem.Web.Areas.Admin.Models;
@using UniversityStudentSystem.Common;

@{
    string controller = "News";
    ViewBag.Title = "Administration - " + controller;
}

@(Html.FullFeaturedGrid<KendoNewsModel>(controller, news => news.Id, cols =>
{
    cols.Bound(news => news.Title).Width(200);
    cols.Bound(news => news.Content).Width(550);
    cols.Bound(news => news.CreatedOn).Format(WebConstants.DateFormatPlaceholder).Width(200);
    cols.Command(cmd => { cmd.Destroy(); });
}))


@section KendoCss{
    @Styles.Render("~/Content/Kendo/css-kendo-silver")
}

@section KendoHead{

    @Scripts.Render("~/bundles/js-kendo")
}

@section KendoJs{
    @Scripts.Render("~/bundles/js-kendo-grid")
}