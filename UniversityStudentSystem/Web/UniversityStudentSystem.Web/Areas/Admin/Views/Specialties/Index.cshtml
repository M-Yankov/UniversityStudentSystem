@using UniversityStudentSystem.Web.Areas.Admin.Helpers;
@using UniversityStudentSystem.Web.Models.Specialties;

@{
    string controller = "Specialties";
    ViewBag.Title = "Administration - " + controller;
}

@(Html.FullFeaturedGrid<SpecialtyViewModel>(controller, spec => spec.Id, cols =>
{
    cols.Bound(specialty => specialty.Name).
    Width(200);
    cols.Bound(specialty => specialty.Description);
    cols.Command(cmd => { cmd.Destroy(); }).Width(200);
}))


@section KendoCss{
    @Styles.Render("~/bundles/css-kendo-silver")
}

@section KendoHead{

    @Scripts.Render("~/bundles/js-kendo")
}

@section KendoJs{
    @Scripts.Render("~/bundles/js-kendo-grid")
}