@model UniversityStudentSystem.Web.Models.Messages.NotifyInputModel

@using (Html.BeginForm("SendToAll", "Notify", new { id = Model.SpecialtyId, area = "Trainer" }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3>Send notification to all students in this specialty.</h3>

        <div class="form-group">
            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control", rows = 3 } })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                <input type="submit" value="Send" class="btn btn-success btn-outline btn-block" />
            </div>
        </div>
    </div>
}
