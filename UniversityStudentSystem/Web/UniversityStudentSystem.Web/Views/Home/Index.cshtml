@{
    ViewBag.Title = "Home Page";
}

<div class="row">
        <div class="container">

            <div class="jumbotron">
                <div class="pull-right">
                    <img src="~/Images/university-default-news.png" alt="universityLogo" width="150" />
                </div>
                <h1>Welcome to student system</h1>
                <p>
                    Easy to learn, latest technologies, job careers at ending of each specialty track -
                    Diploma as rewards. Manage your task and marks
                </p>
            </div>
        </div>
</div>

@{
    Html.RenderAction("LatestNews");
    Html.RenderAction("LatestForumPosts");
}

@section Scripts {
    <script>
        window.onload = function () {
            $('body').on('mouseenter', '.list-group-item', function (e) {
                $(this).addClass('list-group-item-success');
            })

            $('body').on('mouseleave', '.list-group-item', function (e) {
                $(this).removeClass('list-group-item-success');
            })
        }
    </script>
}