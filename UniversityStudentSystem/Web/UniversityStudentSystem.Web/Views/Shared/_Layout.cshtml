<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="icon" type="image/png" href="~/favicon.png" />

    @Styles.Render("~/bundles/css-SBAdmin")
    @Styles.Render("~/bundles/css-site")
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top success" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="/" class="navbar-brand" >
                <i class="fa fa-graduation-cap fa-fw"></i>
                Student System
            </a>
        </div>
        <!-- /.navbar-header -->
        @Html.Partial("_LoginPartial")
        <!-- /.navbar-top-links -->
        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav" id="side-menu">
                    <li class="sidebar-search">
                        <div class="input-group custom-search-form">
                            <input type="text" class="form-control" placeholder="Search...">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">
                                    <i class="fa fa-search"></i>
                                </button>
                            </span>
                        </div>
                        <!-- /input-group -->
                    </li>
                    <li>
                        <a href="/"><i class="fa fa-home fa-fw"></i> Home</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-life-saver fa-fw"></i> Specialties<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                           <!--TODO: foreach secailiees  --> 
                            <li>
                                <a href="#">Spec1</a>
                            </li>// TODO:
                            <li>
                                <a href="#">Spec2</a>
                            </li>
                        </ul>
                        <!-- /.nav-second-level -->
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-th-list fa-fw"></i> Courses <span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <!-- TODO: foreach courses -->
                            <li>
                                <a href="#">Course1</a>
                            </li>
                            <li>
                                <a href="#">Course2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-child fa-fw"></i> Trainers <span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <!-- TODO: foreach trainers -->
                            <li>
                                <a href="#">Trainer1</a>
                            </li>
                            <li>
                                <a href="#">Trainer2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-trophy fa-fw"></i> Certificates</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-info-circle fa-fw"></i> About University</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-bug fa-fw"></i> Report a bug</a>
                        <!-- /.nav-second-level -->
                    </li>
                </ul>
            </div>
            <!-- /.sidebar-collapse -->
        </div>
        <!-- /.navbar-static-side -->
    </nav>
    <div id="page-wrapper">
        @RenderBody()
    </div>
    <div class="clearfix">
    </div>
    <div>
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - University system</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/js-SBAdmin")
    @RenderSection("Scripts", required: false)
</body>
</html>